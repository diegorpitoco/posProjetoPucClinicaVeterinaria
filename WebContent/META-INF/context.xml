<?xml version="1.0" encoding="UTF-8"?>
<Context reloadable="true">

<Resource name="jdbc/datasource"
		auth="Container"
		type="javax.sql.DataSource"
		defaultAutoCommit="false"
		maxActive="50"
		maxIdle="10"
		maxWait="10"
		initialSize="10"
		driverClassName="com.mysql.jdbc.Driver"
		validationQuery="SELECT 'OK'"
		testWhileIdle="true"
		testOnBorrow="true"
		numTestsPerEvictionRun="5"
		timeBetweenEvictionRunsMillis="5000"
		minEvictableIdleTimeMillis="60000"
		antiJarLocking="false"
		antiResourceLocking="false"
		username="root"
		password="admin"
		url="jdbc:mysql://localhost:3306/bd_clinicaveterinaria?useTimezone=true&amp;serverTimezone=UTC;autoReconect=true"/>
<!-- Classe do tomcat que está lendo esse arquivo é org.apache.tomcat.dbcp.dbcp.PoolingDataSource -->			
<!-- POOL DE CONEXÕES -->		
<!-- https://tomcat.apache.org/tomcat-7.8-doc/jdbc-pool.html -->
</Context>